@model ABDWNSprint1.Models.Clinica

@{await Html.RenderPartialAsync("_Header");}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f0f4f8;
        color: #333;
        padding: 20px;
    }
    .container {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    h1, h4 {
        color: #222;
    }
    .form-group {
        margin-bottom: 1rem;
    }
    label.control-label {
        font-weight: 600;
        color: #555;
        display: block;
        margin-bottom: 0.5rem;
    }
    input.form-control {
        width: 100%;
        padding: 0.5rem 0.75rem;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 0.375rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }
    input.form-control:focus {
        border-color: #007bff;
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(0,123,255,.25);
    }
    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.15s ease-in-out;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        border-radius: 0.375rem;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.15s ease-in-out;
    }
    .btn-secondary:hover {
        background-color: #5a6268;
        text-decoration: none;
    }
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
    }
    hr {
        border-top: 1px solid #ddd;
        margin-bottom: 1.5rem;
    }
</style>

@{
    ViewData["Title"] = "Create Clinica";
}

<div class="container">
    <h1>Create Clinica</h1>

    <h4>Clinica</h4>
    <hr />
    <form id="createClinicaForm" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Nome" class="control-label">Nome</label>
            <input asp-for="Nome" class="form-control" id="Nome" name="Nome" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cnpj" class="control-label">Cnpj</label>
            <input asp-for="Cnpj" class="form-control" id="Cnpj" name="Cnpj" />
            <span asp-validation-for="Cnpj" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefone" class="control-label">Telefone</label>
            <input asp-for="Telefone" class="form-control" id="Telefone" name="Telefone" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" id="Email" name="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="RazaoSocial" class="control-label">Razao Social</label>
            <input asp-for="RazaoSocial" class="form-control" id="RazaoSocial" name="RazaoSocial" />
            <span asp-validation-for="RazaoSocial" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label">Senha</label>
            <input asp-for="Senha" class="form-control" id="Senha" name="Senha" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="FotoClinica" class="control-label">Foto da Clinica</label>
            <input asp-for="FotoClinica" class="form-control" id="FotoClinica" name="FotoClinica" />
            <span asp-validation-for="FotoClinica" class="text-danger"></span>
        </div>
        <h4>Endereço</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Logradouro" class="control-label">Logradouro</label>
            <input asp-for="Logradouro" class="form-control" id="Logradouro" name="Logradouro" />
            <span asp-validation-for="Logradouro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Bairro" class="control-label">Bairro</label>
            <input asp-for="Bairro" class="form-control" id="Bairro" name="Bairro" />
            <span asp-validation-for="Bairro" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cep" class="control-label">Cep</label>
            <input asp-for="Cep" class="form-control" id="Cep" name="Cep" />
            <span asp-validation-for="Cep" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Numero" class="control-label">Numero</label>
            <input asp-for="Numero" class="form-control" id="Numero" name="Numero" />
            <span asp-validation-for="Numero" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Complemento" class="control-label">Complemento</label>
            <input asp-for="Complemento" class="form-control" id="Complemento" name="Complemento" />
            <span asp-validation-for="Complemento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Cidade" class="control-label">Cidade</label>
            <input asp-for="Cidade" class="form-control" id="Cidade" name="Cidade" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Uf" class="control-label">Uf</label>
            <input asp-for="Uf" class="form-control" id="Uf" name="Uf" />
            <span asp-validation-for="Uf" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
            <a href="/clinicamvc" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

<script>
    document.getElementById('createClinicaForm').addEventListener('submit', async function(event) {
        event.preventDefault();

        const clinicaData = {
            Id: 0,
            Nome: document.getElementById('Nome').value,
            Cnpj: document.getElementById('Cnpj').value,
            Telefone: document.getElementById('Telefone').value,
            Email: document.getElementById('Email').value,
            RazaoSocial: document.getElementById('RazaoSocial').value,
            Senha: document.getElementById('Senha').value,
            FotoClinica: document.getElementById('FotoClinica').value,
            EnderecoId: 0,
            Endereco: {
                Id: 0,
                Logradouro: document.getElementById('Logradouro').value,
                Bairro: document.getElementById('Bairro').value,
                Cep: document.getElementById('Cep').value,
                Numero: document.getElementById('Numero').value,
                Complemento: document.getElementById('Complemento').value,
                Cidade: document.getElementById('Cidade').value,
                Uf: document.getElementById('Uf').value
            }
        };

        try {
            const response = await fetch('/api/Clinica', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: JSON.stringify(clinicaData)
            });

            if (response.ok) {
                alert('Clinica criado com sucesso!');
                window.location.href = '/ClinicaMvc/Index';
            } else {
                const errorData = await response.json();
                alert('Erro ao criar clinica: ' + (errorData.message || response.statusText));
            }
        } catch (error) {
            alert('Erro na requisição: ' + error.message);
        }
    });
</script>
